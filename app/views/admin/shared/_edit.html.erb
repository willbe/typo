<% className = form_action.delete(:class) %>
<%= form_tag(form_action, :id => "#{form_type}_form", :enctype => "multipart/form-data", :class => className) do %>

  <%= render :partial => "form" %>

<% end %>

<% if current_user.admin? and form_type == "article" %>
<%= render 'admin/content/merge', { :form_type => "article", :form_action => { :action => "merge", :id => @article.id } }  %>
<% end %>
